{
  "schemaVersion": 1,
  "id": "fracdustry",
  "version": "${version}",

  "name": "Fracdustry Reimagined",
  "description": "A unique technology modification ported from Forge to Fabric.",
  "authors": [
    "MikhailTapio",
    "PoseidonLi",
    "Arrokoth486958",
    "Peakstep"
  ],
  "contact": {
    "homepage": "https://github.com/AnotherFractal",
    "sources": "https://github.com/AnotherFractal/FracdustryReimagined"
  },

  "license": "MIT License",
  "icon": "assets/fracdustry/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "dev.anotherfractal.fracdustry.Fracdustry"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "dev.anotherfractal.fracdustry.FracdustryClient"
      }
    ]
  },
  "depends": {
    "fabricloader": ">=0.8.7",
    "fabric": "*",
    "fabric-language-kotlin": "*",
    "minecraft": "1.17.x"
  }
}
